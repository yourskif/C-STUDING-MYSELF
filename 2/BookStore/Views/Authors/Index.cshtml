@model IEnumerable<BookStore.Models.Author>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список авторів</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between mb-3">
            <h2>Автори</h2>
            <div>
                <a href="@Url.Action("Index", "Books")" class="btn btn-secondary me-2">Книги</a>
                <a href="@Url.Action("Create", "Authors")" class="btn btn-primary">Додати автора</a>
            </div>
        </div>

        <!-- Фільтр за авторами -->
        <div class="mb-3">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="authorFilter" class="form-control" placeholder="Пошук за прізвищем або ім'ям..." value="@ViewBag.AuthorFilter" />
                    <button type="submit" class="btn btn-outline-secondary">Шукати</button>
                </div>
            </form>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Прізвище</th>
                    <th>Ім’я</th>
                    <th>Книги</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td>@author.LastName</td>
                        <td>@author.FirstName</td>
                        <td>@author.Books.Count</td>
                        <td>
                            <a href="@Url.Action("Details", "Authors", new { id = author.Id })" class="btn btn-info btn-sm">Деталі</a>
                            <a href="@Url.Action("Edit", "Authors", new { id = author.Id })" class="btn btn-warning btn-sm ms-1">Редагувати</a>
                            <a href="@Url.Action("Delete", "Authors", new { id = author.Id })" class="btn btn-danger btn-sm ms-1">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>